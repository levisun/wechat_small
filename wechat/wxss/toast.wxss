.ui-toast{
    position: fixed;
    top: 35%;
    left: 20%;
    transform: translateZ(0) translateY(-100%);
    background: rgba(0, 0, 0, .8);
    color: #fff;
    font-size: 16px;
    width: 60%;
    line-height: 1.5em;
    margin: 0 auto;
    box-sizing: border-box;
    padding: 10px;
    text-align: center;
    border-radius: 4px;
    z-index: 101;
}