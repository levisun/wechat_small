.ui-tab {
    height: 45px
}

.ui-tab__bd {
    width: 750rpx;
    display: flex;
    flex-direction: row;
    border-bottom: 1rpx solid #e5e5e5;
    background: #fff
}

.ui-tab__bd--fixed {
    position: fixed;
    top: 0;
    z-index: 2
}

.ui-tab__item {
    flex: 1;
    display: inline-block;
    text-align: center;
    box-sizing: border-box
}

.ui-tab__title {
    font-size: 14px;
    display: inline-block;
    color: #666;
    height: 44px;
    line-height: 44px;
    box-sizing: border-box;
    margin: 0 10px;
    word-break: keep-all
}

.ui-tab__item--selected .ui-tab__title {
    color: #f44;
    border-bottom: 2px solid #f44
}

.ui-tab__bd--scroll {
    display: block;
    white-space: nowrap
}

.ui-tab__bd--scroll .ui-tab__item {
    min-width: 80px
}

.ui-tab__bd--scroll .ui-tab__text {
    margin: 0 20px
}