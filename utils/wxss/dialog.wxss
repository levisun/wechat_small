.ui-dialog--container {
    position: fixed;
    top: 45%;
    left: 50%;
    width: 80%;
    height: 0;
    font-size: 16px;
    overflow: hidden;
    transition: all .2s linear;
    border-radius: 4px;
    background-color: #fff;
    transform: translate3d(-50%,-50%,0);
    color: #333;
    opacity: 0
}

.ui-dialog--mask {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: rgba(0,0,0,.6);
    transition: .3s;
    display: none
}

.ui-dialog__header {
    padding: 15px 0 0;
    text-align: center
}

.ui-dialog__content {
    padding: 15px 20px;
    line-height: 1.5;
    min-height: 40px;
    border-bottom: 1rpx solid #e5e5e5
}

.ui-dialog__content--title {
    color: #999;
    font-size: 14px
}

.ui-dialog__footer {
    overflow: hidden
}

.ui-dialog__button {
    line-height: 50px;
    height: 50px;
    padding: 0 5px;
    border: 0 none;
    border-radius: 0;
    margin-bottom: 0
}

.ui-dialog--show .ui-dialog--container {
    opacity: 1;
    height: auto
}

.ui-dialog--show .ui-dialog--mask {
    display: block
}

.ui-dialog__footer--horizon {
    display: flex
}

.ui-dialog__footer--horizon .ui-dialog__button {
    flex: 1;
    border-right: 1rpx solid #e5e5e5
}

.ui-dialog__footer--horizon .ui-dialog__button:last-child {
    border-right: 0 none
}

.ui-dialog__footer--vertical .ui-dialog__button {
    flex: 1;
    border-bottom: 1rpx solid #e5e5e5
}

.ui-dialog__footer--vertical .ui-dialog__button:last-child {
    border-bottom: 0 none
}