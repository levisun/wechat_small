<template name="ui-capsule">
<view class="ui-capsule ui-capsule--{{type}}">
    <block wx:if="{{color}}">
        <view class="ui-capsule__left" style="background: {{color}}; border-color: {{color}}">
            {{leftText}}
        </view>
        <view class="ui-capsule__right" style="color: {{color}}; border-color: {{color}}">
            {{rightText}}
        </view>
    </block>
    <block wx:else>
        <view class="ui-capsule__left">
            {{leftText}}
        </view>
        <view class="ui-capsule__right">
            {{rightText}}
        </view>
    </block>
</view>
</template>