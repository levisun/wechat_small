<template name="ui-popup">
<view class="ui-popup {{showPopup ? 'ui-popup--show' : ''}}">
    <view class="ui-popup__mask" bindtap="togglePopup"></view>
    <view class="ui-popup__container popup-example--center">
        <view class="ui-btns">
            <button class="ui-btn" bindtap="togglePopup">
                关闭 popup
            </button>
        </view>
    </view>
</view>
</template>