<template name="ui-modal">
<block wx:if="{{ui.modal.show}}">
<view class="ui-mask"></view>
<view class="ui-modal">
    <view class="ui-modal-header">
        {{ui.modal.title}}
    </view>
    <view class="ui-modal-body">
        {{ui.modal.content}}
    </view>
    <view class="ui-modal-footer">
        <button class="ui-btn ui-btn-large ui-btn-cancel" data-type="cancel" bindtap="uiModalBtn">取消</button>
        <button class="ui-btn ui-btn-large ui-btn-confirm" data-type="confirm" bindtap="uiModalBtn">确定</button>
    </view>
</view>
</block>
</template>