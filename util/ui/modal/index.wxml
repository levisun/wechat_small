<template name="ui-modal">
<block wx:if="{{ui.modal.show}}">
<view class="ui-mask"></view>
<view class="ui-modal-portal">
    <view class="ui-modal-header">
        {{ui.modal.title}}
    </view>
    <view class="ui-modal-body">
        {{ui.modal.content}}
    </view>
    <view class="ui-modal-footer">
        <button bindtap="uiModalCancel">取消</button>
        <button bindtap="uiModalConfirm">确定</button>
    </view>
</view>
</block>
</template>