.ui-field-input{
    display: block;
    box-sizing: border-box;
    width: 100%;
    padding: .75rem .5rem;
    border: 1px solid #ccc;
    border-radius: 0;
    outline: 0;
    background: #fff;
    color: #222;
    font-size: 14px;
    line-height: 1.5em;
    height: auto;
    -webkit-font-smoothing: antialiased;
    vertical-align: middle;
}
.ui-field-group{
    display: flex;
    flex-flow: row;
    align-items: stretch;
    margin-bottom: 1rem;
}
.ui-field-group .ui-field-label{
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    flex: 0 0 auto;
    margin: 0;
    padding-top: 0;
    padding-bottom: 0;
    border-radius: 0;

    padding-left: .5rem;
    padding-right: .5rem;
    border: 1px solid #ccc;
    background: #eee;
    color: #333;
    display: flex;
}