.ui-popup {
    position: fixed;
    background-color: #fff;
    width: 100%;
    height: 100%;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%, -50%, 0);
    transition: .2s ease-out;
}

.ui-popup-right {
    transform: translate3d(50%, -50%, 0);
}

.ui-popup-left {
    transform: translate3d(-150%, -50%, 0);
}

.ui-popup-show {
    transform: translate3d(-50%, -50%, 0);
}