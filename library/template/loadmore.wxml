<template name="ui-loadmore">
<block wx:if="{{uiLoadmore.nomore}}">
    <view class="ui-loadmore ui-loadmore--nomore">
        <view class="ui-loadmore__tips">
            <view class="ui-loadmore__dot"></view>
        </view>
    </view>
</block>

<block wx:elif="{{uiLoadmore.nodata}}">
    <view class="ui-loadmore ui-loadmore--nodata">
        <view class="ui-loadmore__tips">
            {{uiLoadmore.nodata_str || '暂无数据' }}
        </view>
    </view>
</block>

<block wx:elif="{{uiLoadmore.loading}}">
    <view class="ui-loadmore">
        <view class="ui-loading"></view>
        <view class="ui-loadmore__tips">
            {{uiLoadmore.loading_str || '加载中...' }}
        </view>
    </view>
</block>
</template>
