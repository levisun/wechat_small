.ui-title {
    font-size: 25px;
    line-height: 25px;
    color: #666;
    padding: 15px 0;
    margin: 10px 0;
    border-bottom: 1rpx solid #e5e5e5;
}
.ui-desc,
.ui-description {
    margin: 14px 0;
    padding: 0 15px;
    font-size: 14px;
    line-height: 20px;
    color: #666;
}

.ui-text-left {
    text-align: left;
}
.ui-text-center {
    text-align: center;
}
.ui-text-right {
    text-align: right;
}
.ui-text-justify {
    text-align: justify;
}
.ui-text-nowrap {
    white-space: nowrap;
}
.ui-text-deleted {
    text-decoration: line-through;
}

.ui-img-rounded, .ui-img-circle, .ui-img-thumbnail {
    vertical-align: middle;
    display: block;
}
.ui-img-rounded {
    border-radius: 6px;
}
.ui-img-circle {
    border-radius: 50%;
}
.ui-img-thumbnail {
    display: inline-block;
    max-width: 100%;
    height: auto;
    padding: 4px;
    line-height: 1.42857143;
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 4px;
}

.ui-clearfix {
    zoom: 1;
}
.ui-clearfix::after {
    content: '';
    display: table;
    clear: both;
}
.ui-pull-left {
    float: left;
}
.ui-pull-right {
    float: right;
}

.ui-font-8 {
    font-size: 8px;
}
.ui-font-10 {
    font-size: 10px;
}
.ui-font-12 {
    font-size: 12px;
}
.ui-font-14 {
    font-size: 14px;
}
.ui-font-16 {
    font-size: 16px;
}
.ui-font-18 {
    font-size: 18px;
}
.ui-font-20 {
    font-size: 20px;
}
.ui-font-22 {
    font-size: 22px;
}
.ui-font-24 {
    font-size: 22px;
}
.ui-font-30 {
    font-size: 30px;
}
.ui-font-bold {
    font-weight: 700;
}

.ui-arrow {
    position: absolute;
    right: 15px;
    top: 50%;
    display: inline-block;
    height: 6px;
    width: 6px;
    border-width: 2px 2px 0 0;
    border-color: #c8c8c8;
    border-style: solid;
    transform: translateY(-50%) matrix(.71, .71, -.71, .71, 0, 0);
}

.ui-ellipsis {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-wrap: normal;
}
.ui-ellipsis-l2 {
    max-height: 40px;
    line-height: 20px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.ui-ellipsis-l3 {
    max-height: 60px;
    line-height: 20px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}

.ui-close {
    position: relative;
    display: inline-block;
    width: 30px;
    height: 30px;
    overflow: hidden;
    /*padding: 0 15px;*/
}
.ui-close::before, .ui-close::after {
    content: '';
    position: absolute;
    height: 2px;
    width: 100%;
    top: 50%;
    left: 0;
    margin-top: -1px;
    background: #000;
}
.ui-close::before {
    -webkit-transform: rotate(45deg);
    -moz-transform: rotate(45deg);
    -ms-transform: rotate(45deg);
    -o-transform: rotate(45deg);
    transform: rotate(45deg);
}
.ui-close::after {
    -webkit-transform: rotate(-45deg);
    -moz-transform: rotate(-45deg);
    -ms-transform: rotate(-45deg);
    -o-transform: rotate(-45deg);
    transform: rotate(-45deg);
}

.ui-mask{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 99;
    background: rgba(0, 0, 0, .2);
}
