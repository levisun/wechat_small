.ui-popup__mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 10;
    background: rgba(0,0,0,.7);
    display: none
}

.ui-popup__container {
    position: fixed;
    left: 50%;
    top: 50%;
    background: #fff;
    transform: translate3d(-50%,-50%,0);
    transform-origin: center;
    transition: all .4s ease;
    z-index: 11;
    opacity: 0
}

.ui-popup--show .ui-popup__container {
    opacity: 1
}

.ui-popup--show .ui-popup__mask {
    display: block
}

.ui-popup--left .ui-popup__container {
    left: 0;
    top: auto;
    transform: translate3d(-100%,0,0)
}

.ui-popup--show.ui-popup--left .ui-popup__container {
    transform: translate3d(0,0,0)
}

.ui-popup--right .ui-popup__container {
    right: 0;
    top: auto;
    left: auto;
    transform: translate3d(100%,0,0)
}

.ui-popup--show.ui-popup--right .ui-popup__container {
    transform: translate3d(0,0,0)
}

.ui-popup--bottom .ui-popup__container {
    top: auto;
    left: auto;
    bottom: 0;
    transform: translate3d(0,100%,0)
}

.ui-popup--show.ui-popup--bottom .ui-popup__container {
    transform: translate3d(0,0,0)
}

.ui-popup--top .ui-popup__container {
    top: 0;
    left: auto;
    transform: translate3d(0,-100%,0)
}

.ui-popup--show.ui-popup--top .ui-popup__container {
    transform: translate3d(0,0,0)
}