<import src="/library/template/dialog.wxml" />

<view class="ui-container">

    <view class="ui-title">DIALOG</view>

    <view class="ui-btns" style="margin-top: 30vh;">
        <button class="ui-btn" bindtap="_toggleBaseDialog">
            基础 Dialog
        </button>
        <button class="ui-btn" bindtap="_toggleWithoutTitleDialog">
            Dialog - 无标题
        </button>
        <button class="ui-btn" bindtap="_toggleButtonDialog">
            Dialog - 自定义显示按钮
        </button>
        <button class="ui-btn" bindtap="_toggleVerticalDialog">
            Dialog - 按钮纵向排布
        </button>
    </view>

</view>

<template is="ui-dialog" data="{{uiDialog}}"></template>
