<view class="container">
    <scroll-view scroll-y="true" lower-threshold="1" bindscrolltolower="loadingMore" data-loading="{{loading}}" data-page="{{page}}">
        <block wx:if="{{itemList}}">
        <view class="goods-itme">
            <view wx:for="{{itemList}}" wx:key="unique" wx:for-index="key" wx:for-item="value" bindtap="goToItem" data-id="{{value.id}}">
                <image src="https://www.youtuiyou.cn/{{value.image}}"></image>
                <text>{{value.name}}</text>
            </view>
        </view>
        </block>
    </scroll-view>
</view>